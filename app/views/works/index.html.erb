<% title 'Портфолио MagMaster' %>
<% meta_tag :title, 'Портфолио MagMaster' %>

<div class="overlay"></div><!-- блок нужный для затемнения фонового изображения -->

<div class="container our-works-list">
  <div class="row">
    <div class="col-xs-12 col-sm-5 col-md-3 our-works-list__logo-block">
      <a href="/" class="logo our-works-list__logo" title="На главную">
        <div class="logo__title">MAGMASTER.BY</div>
        <div class="logo__description">декоративная краска и услуги по нанесению</div>
      </a>
    </div>
    <div class="col-xs-12 col-sm-7 col-md-9">
      <h1 class="our-works-list__title">Наши работы</h1>
    </div>
  </div>
  <div class="row our-works-list__row">
    <% @works.each do |work| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <%=link_to work_path(work), class:'our-works-list__item_a' do %>
          <div class="our-works-list__item">
            <div class="our-works-list__item_title"><%=work.title%></div>
            <img src="<%= work.image.url%>" alt="" class="our-works-list__img">
          </div>
        <%end%>
      </div>
    <%end%>

  </div>

