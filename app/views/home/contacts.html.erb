<div class="contacts__googlemaps-block">
	<div class="contacts__googlemaps" id="googlemaps"></div>
</div>

<div class="contacts container">

		<div class="row">
			<div class="col-xs-12 contacts__logo-block">
				<a href="/" class="logo contacts__logo" title="На главную">
		        	<div class="logo__title">MAGMASTER.BY</div>
		        	<div class="logo__description">декоративная краска и услуги по нанесению</div>
		      	</a>
			</div>
		</div><!-- /.row -->

	<!-- блок с адресом и формой -->
		<div class="row contacts__main-content">
			<div class="col-xs-12 col-sm-6 col-md-3 col-md-offset-2 contacts__left-col">
				<h1 class="contacts__main-title">Контакты</h1>
				<div class="contacts__phone">+ 375 29 627 627 3</div>
				<div class="contacts__address">
					magmaster.by@gmail.com<br>
					г. Минск<br>
				</div>
			</div>
			<div class="col-xs-12 col-sm-6 col-md-4 col-md-offset-1">
				<h2 class="contacts__secondary-title">Задать вопрос</h2>
				<div class="errors"></div>
				<%= form_for(Question.new, url: questions_path, remote: true) do |f| %>
					<%= f.text_field :name, placeholder: "Имя", class:"form-control contacts-form__input contacts-form__name" %>
					<%= f.telephone_field :phone, placeholder: "Номер телефона", class:"form-control contacts-form__input contacts-form__phone"%>
					<%= f.email_field :email, placeholder: "E-mail", class:"form-control contacts-form__input contacts-form__email" %>
					<%= f.text_area :message, placeholder: "Cообщение", rows: 3, class:"form-control contacts-form__input contacts-form__message" %>
					<div class="text-center contacts-form__button-block">
						<%= f.submit "Отправить", class: 'btn btn__grey-bg btn__grey-bg_normal contacts-form__button' %>
					</div>
				<%end%>
			</div>
		</div><!-- /.row -->

</div><!-- /.contacts container -->

