<!-- modal popup with form  to ask questions -->
<div class="modal fade form-ask__modal" tabindex="-1" role="dialog" id="form-ask">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title form-ask__title">Задать вопрос</h4>
      </div>

      <div class="modal-body">
          <form class="ask-form">
            <div class="form-group">
              <input type="text" class="form-control ask-form__input ask-form__name" name="ask-form__name" placeholder="Ваше имя" required="required">
            </div>
            <div class="form-group">
              <input type="text" class="form-control ask-form__input ask-form__phone" name="ask-form__phone" placeholder="Номер телефона" required="required">
            </div>
            <div class="form-group">
              <textarea class="form-control ask-form__input ask-form__message" name="ask-form__message" rows="3" placeholder="Введите ваше сообщение (также вы можете оставить свой номер телефона, мы перезвоним Вам и ответим на все интересущие вопросы)"></textarea>
            </div>
            <div class="text-center ask-form__button-block">
              <button class="btn btn__grey-bg btn__grey-bg_normal ask-form__button" type="submit">Отправить</button>
            </div>
          </form>
      </div>

    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->