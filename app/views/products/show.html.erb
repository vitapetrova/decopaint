<div class="product-page__bg"></div>
<div class="product-page">
	<div class="container">
		<div class="row">

			<div class="col-xs-6 col-sm-4 col-md-3 left-menu__overlay">

			 <%= render "partials/left-menu" %>

			</div><!-- /.left col -->
			<div class="col-xs-6 col-sm-8 col-md-9">

				<section class="product-info">
					<div class="row product-info__row">
						<div class="col-xs-12 col-sm-12 col-md-6 product-info__left-col">
							<!-- <img src="{{root}}assets/img/product-page/main-img.png" alt="Краска збс" class="img-responsive product-info__main-img"> -->
							<div class="product-slider__block"><!-- сдайдер маленьких изображений -->
								<div class="product-slider__navigation"></div>
								<div class="owl-carousel product-slider">
									<%@product.product_images.each do |product_image|%>
									<div class="product-slider__item">
										<img src="<%=product_image.image.url%>" alt="" class="product-slider__img">
									</div>
									<%end%>
								</div>
							</div><!-- /. product-slider__block -->
						</div><!-- /.product-info left -->
						<div class="col-xs-12 col-sm-12 col-md-6 product-info__right-col">
							<h1 class="product-info__title"><%@product.title%></h1>
							<!-- варианты для смены картинки - availability_custom, availability_ok, availability_no -->
							<% class_style = 'availability_custom' if @product.status == 'Под заказ'
							 	 class_style = 'availability_ok' if @product.status == 'В наличии'
							   class_style = 'availability_no' if @product.status == 'Нет в наличии' %>
							<div class="product-info__availability <%=class_style%>"><%=@product.status%></div>

							<form class="form-horizontal product-info__form" name="product-info__form">

								<div class="product-info__form-text">Выберите объём*</div>
								  <div class="form-group">
								    <div class="col-md-5">
								        <select class="form-control product-info__volume" name="product-info__volume">
										  <option value="volume1">0.5 литра</option>
										  <option value="volume2">1.5 литра</option>
										  <option value="volume3">Бочка</option>
										</select>
								    </div>
								    <div class="col-md-7">
								      <div class="product-info__price"><%=@product.price%> руб.</div>
								      <!-- добавить зачеркнутую(вторую цену) стили-->
								      <%=@product.price2%>
								    </div>
								  </div><!-- /.строка с объемом и ценой -->

								  <div class="checkbox product-info__need-painting">
									  <label>
									    <input type="checkbox" value="need-painting" name="need-painting">
									    <!-- ??? -->
									    Необходимо нанесение
									  </label>
								  </div><!-- /.чекбокс -->
								  <a href="#" class="product-info__to-portfolio">Посмотреть наши работы</a>
								  <div class="product-info__note"><%=@product.min_description%></div>
								  <div class="form-group">
									    <div class="col-xs-12 col-sm-6 col-md-5">
									      <div class="input-group product-info__amount_group">
											  <span class="input-group-btn">
											  	 <button class="btn btn-default product-info__amount_left" type="button">
											  	 	<span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
											  	 </button>
											  </span>
											  <input type="text" class="form-control product-info__amount" value="1" disabled>
											  <span class="input-group-btn">
											  	 <button class="btn btn-default product-info__amount_right" type="button">
											  	 	<span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span>
											  	 </button>
											  </span>
											</div>
									    </div>
									    <div class="col-xs-12 col-sm-6 col-md-7 text-center">
									      <button class="btn btn__grey-bg btn__product-form" type="submit">Заказать</button>
									    </div>
								  </div><!-- /.количество и кнопка заказать -->

							</form><!-- /. форма с данными для заказа -->



						</div><!-- /.product-info right -->
					</div><!-- /.product-info row -->
				</section><!-- /.product-info -->

				<section class="product-description">

				  <!-- Nav tabs -->
				  <ul class="nav nav-tabs product-description__tabs">
				    <li class="product-description__tabs_item active">
				    	<a href="#pane1" data-toggle="tab" class="product-description__tabs_a">Описание товара</a>
				    </li>
				    <li class="product-description__tabs_item">
				    	<a href="#pane2" data-toggle="tab" class="product-description__tabs_a">Нанесение</a>
				    </li>
				  </ul><!-- / nav tabs for product-description -->

				  <!-- Tab panes -->
				  <div class="tab-content product-description__content">
				    <div class="tab-pane fade in active product-description__pane" id="pane1">
							<%=@product.description.html_safe%>
				    </div><!-- / pane1 -->
				    <div class="tab-pane fade in product-description__pane" id="pane2">
							<%=@product.additional_description.html_safe%>
				    </div><!-- / pane2 -->
				  </div><!-- /.tab-content -->


				</section>

				<section class="related-products">
					<h2 class="related-products__title">Вместе с этим товаром покупают:</h2>
					<div class="row">
						<div class="col-xs-12 col-sm-6 col-md-4">

							<a href="#" class="vertical-card__a">
							    <div class="thumbnail vertical-card related-products__card">
							      <div class="vertical-card__img_wrap">
							      	<img src="<%= asset_path('product/pot-wide1.jpg') %>" class="vertical-card__img" alt="ptoduct title">
									<div class="card__type card__type_chalk">
									</div>
							      	</div>
							      <div class="caption">
									<div class="vertical-card__description">
										Грифельная краска с эффектом школьной доски Siberia колеруемая
									</div>
									<div class="vertical-card__price">115 руб</div>
							      </div>
							    </div>
							</a>

						</div>
						<div class="col-xs-12 col-sm-6 col-md-4">

							<a href="#" class="vertical-card__a">
							    <div class="thumbnail vertical-card related-products__card">
							      <div class="vertical-card__img_wrap">
							      	<img src="<%= asset_path('product/pot-wide1.jpg') %>" class="vertical-card__img" alt="ptoduct title">
									<div class="card__type card__type_chalk">
									</div>
							      	</div>
							      <div class="caption">
									<div class="vertical-card__description">
										Грифельная краска с эффектом школьной доски Siberia колеруемая
									</div>
									<div class="vertical-card__price">115 руб</div>
							      </div>
							    </div>
							</a>

						</div>
						<div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-0">

							<a href="#" class="vertical-card__a">
							    <div class="thumbnail vertical-card related-products__card">
							      <div class="vertical-card__img_wrap">
							      	<img src="<%= asset_path('product/pot-wide1.jpg') %>" class="vertical-card__img" alt="ptoduct title">
									<div class="card__type card__type_chalk">
									</div>
							      	</div>
							      <div class="caption">
									<div class="vertical-card__description">
										Грифельная краска с эффектом школьной доски Siberia колеруемая
									</div>
									<div class="vertical-card__price">115 руб</div>
							      </div>
							    </div>
							</a>

						</div>
					</div><!-- /.row -->
				</section><!-- /.related-products -->

			</div><!-- /.right col -->
		</div><!-- /.row -->
	</div><!-- /.container -->
</div><!-- /.product-page -->
